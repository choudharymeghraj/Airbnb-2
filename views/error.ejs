<% layout("/layouts/boilerplate") %>

<section class="error-page py-5">
    <div class="d-flex justify-content-center">
        <div class="card error-card shadow-sm text-center p-4">
            <div class="card-body">
                <i class="fa-solid fa-circle-exclamation fa-3x text-danger mb-3" aria-hidden="true"></i>
                <h2 class="card-title mb-2"><%= message %></h2>
                <p class="text-muted mb-3">The page you requested could not be found or may have been moved. Try returning to the homepage or browse listings.</p>
                <div>
                    <a href="/" class="btn btn-outline-secondary me-2">Home</a>
                    <a href="/listings" class="btn btn-danger">Browse Listings</a>
                </div>
            </div>
        </div>
    </div>
</section>
