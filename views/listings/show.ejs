<% layout('/layouts/boilerplate') %>

<div class="container mt-3">

    <div class="row mt-3 mb-3">
      <div class="col-12">
        <h3 class="fw-bold fs-2"><%= listing.title %></h3>
        <p class="text-muted fw-semibold">
          <i class="fas fa-map-marker-alt text-danger"></i>
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>

    <!-- Image and Booking Card Side by Side -->
    <div class="row mb-4">
      <div class="col-lg-7">
        <div class="card listing-card shadow-none border-0">
          <img src="<%= listing.image.url %>" class="card-img-top rounded-4 w-100" alt="listing_image"
            style="height: 450px; object-fit: cover;">
        </div>
      </div>

      <!-- Booking Card Column -->
      <div class="col-lg-5">
        <div class="booking-card-wrapper">
          <div class="card shadow border-0 rounded-3 p-3 position-sticky" style="top: 100px;">
            <div class="d-flex justify-content-between align-items-baseline mb-3">
              <div>
                <span class="fs-4 fw-bold">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
                <span class="text-muted small"> night</span>
              </div>
              <div class="text-muted" style="font-size: 0.875rem;">
                <% if(listing.reviews.length > 0) { %>
                  <% const avgRating = (listing.reviews.reduce((sum, r) => sum + r.rating, 0) / listing.reviews.length).toFixed(1); %>
                  <i class="fas fa-star text-warning"></i> <%= avgRating %> &middot; 
                <% } %>
                <u><%= listing.reviews.length %> reviews</u>
              </div>
            </div>

            <form action="/listings/<%= listing._id %>/book" method="POST">
              <div class="border rounded-3 mb-2 overflow-hidden">
                <div class="d-flex border-bottom">
                  <div class="p-2 w-50 border-end">
                    <label class="small fw-bold text-uppercase d-block text-muted"
                      style="font-size: 0.65rem;">Check-in</label>
                    <input type="date" name="booking[checkIn]" class="form-control border-0 p-0 shadow-none" style="font-size: 0.875rem;" required>
                  </div>
                  <div class="p-2 w-50">
                    <label class="small fw-bold text-uppercase d-block text-muted"
                      style="font-size: 0.65rem;">Check-out</label>
                    <input type="date" name="booking[checkOut]" class="form-control border-0 p-0 shadow-none" style="font-size: 0.875rem;" required>
                  </div>
                </div>
                <div class="p-2 border-top">
                  <label class="small fw-bold text-uppercase d-block text-muted" style="font-size: 0.65rem;">Nights</label>
                  <input type="number" name="booking[nights]" id="nightsInput" class="form-control border-0 p-0 shadow-none" style="font-size: 0.875rem;" value="5" min="1" required>
                </div>
                <div class="p-2 border-top">
                  <label class="small fw-bold text-uppercase d-block text-muted" style="font-size: 0.65rem;">Guests</label>
                  <select name="booking[guests]" class="form-select border-0 p-0 shadow-none text-dark" style="font-size: 0.875rem;">
                    <option value="1">1 guest</option>
                    <option value="2">2 guests</option>
                    <option value="3">3 guests</option>
                  </select>
                </div>
              </div>

              <button class="btn btn-danger w-100 py-2 fw-semibold rounded-3" style="background: #ff385c; font-size: 1rem;">Reserve</button>
              <div class="text-center mt-2"><small class="text-muted" style="font-size: 0.8rem;">You won't be charged yet</small></div>

              <div class="mt-3 pt-2 border-top">
                <div class="d-flex justify-content-between mb-2" style="font-size: 0.875rem;">
                  <span class="text-decoration-underline">&#8377;<%= listing.price %> x <span id="nightsDisplay">5</span> nights</span>
                  <span id="nightsPriceDisplay">&#8377;<%= (listing.price * 5).toLocaleString("en-IN") %></span>
                </div>
                <div class="d-flex justify-content-between mb-2" style="font-size: 0.875rem;">
                  <span class="text-decoration-underline">Service fee</span>
                  <span>&#8377;2,500</span>
                </div>
                <hr class="my-2">
                <div class="d-flex justify-content-between fw-bold" style="font-size: 1rem;">
                  <span>Total</span>
                  <span id="totalPriceDisplay">&#8377;<%= (listing.price * 5 + 2500).toLocaleString("en-IN") %></span>
                </div>
              </div>
            </form>

            <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
              <div class="mt-3 pt-2 border-top text-center">
                <p class="text-muted small mb-2">Owner Controls</p>
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark btn-sm me-2">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                  <button class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Description and Details Section -->
    <div class="row mt-4">
      <div class="col-lg-7">

        <div class="d-flex align-items-center justify-content-between border-bottom pb-3 mb-3">
          <div>
            <h5 class="fw-bold mb-1">Hosted by <%= listing.owner.username %></h5>
            <p class="text-muted mb-0 small">Superhost &middot; 2 years hosting</p>
          </div>
          <div class="bg-dark text-white rounded-circle d-flex justify-content-center align-items-center"
            style="width: 48px; height: 48px; font-size: 1.3rem;">
            <%= listing.owner.username.charAt(0).toUpperCase() %>
          </div>
        </div>

        <div class="mb-4 pb-3 border-bottom">
          <p class="text-dark mb-0" style="font-size: 0.95rem; line-height: 1.65;">
            <%= listing.description %>
          </p>
        </div>

        <div class="mb-4 pb-3 border-bottom">
          <h5 class="fw-bold mb-3" style="font-size: 1.1rem;">What this place offers</h5>
          <div class="row">
            <div class="col-md-6 mb-2"><i class="fas fa-wifi me-2 text-muted"></i> <span style="font-size: 0.95rem;">Wifi</span></div>
            <div class="col-md-6 mb-2"><i class="fas fa-car me-2 text-muted"></i> <span style="font-size: 0.95rem;">Free parking</span></div>
            <div class="col-md-6 mb-2"><i class="fas fa-tv me-2 text-muted"></i> <span style="font-size: 0.95rem;">TV</span></div>
            <div class="col-md-6 mb-2"><i class="fas fa-paw me-2 text-muted"></i> <span style="font-size: 0.95rem;">Pets allowed</span></div>
          </div>
        </div>

        <!-- ========== ALL REVIEWS SECTION (MOVED UP) ========== -->
        <% if(listing.reviews.length > 0) { %>
          <div class="reviews-section mb-4 pb-3 border-bottom">
            <div class="d-flex align-items-center gap-2 mb-3">
              <i class="fas fa-comments text-info fs-5"></i>
              <h5 class="fw-bold mb-0" style="font-size: 1.1rem;">All Reviews (<%= listing.reviews.length %>)</h5>
            </div>

            <!-- Average Rating Box -->
            <% 
            const totalRating = listing.reviews.reduce((sum, r) => sum + r.rating, 0);
            const avgRating = totalRating / listing.reviews.length;
            %>
            
            <div class="average-rating-box">
              <div class="average-rating-number"><%= avgRating.toFixed(1) %></div>
              <div class="average-rating-stars">
                <% for(let i = 1; i <= 5; i++) { %>
                  <span class="star <%= i <= Math.round(avgRating) ? 'filled' : '' %>">★</span>
                <% } %>
              </div>
              <div class="total-reviews-text">
                Based on <%= listing.reviews.length %> review<%= listing.reviews.length !== 1 ? 's' : '' %>
              </div>
            </div>

            <!-- Individual Reviews -->
            <div class="row">
              <% for(review of listing.reviews) { %>
                <div class="col-12 mb-2">
                  <div class="review-card">
                    <div class="d-flex justify-content-between align-items-start">
                      <div class="d-flex gap-3">
                        <div class="review-avatar">
                          <%= review.author.username.charAt(0).toUpperCase() %>
                        </div>
                        <div>
                          <h6 class="review-author-name mb-1">
                            <%= review.author.username %>
                          </h6>
                          <small class="text-muted d-block">Verified Guest</small>
                          
                          <!-- Display Stars for Review -->
                          <div class="review-stars">
                            <% for(let i = 1; i <= 5; i++) { %>
                              <span class="star <%= i <= review.rating ? 'filled' : '' %>">★</span>
                            <% } %>
                          </div>
                        </div>
                      </div>
                      <% if(currUser && currUser._id.equals(review.author._id)) {%>
                        <form method="POST"
                          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                          <button class="btn-delete-review">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                          </button>
                        </form>
                      <% } %>
                    </div>
                    <p class="review-comment mt-2 mb-0">
                      <%= review.comment %>
                    </p>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>

        <!-- ========== LEAVE A REVIEW FORM ========== -->
        <% if(currUser) { %>
          <div class="mb-4 pb-3 border-bottom">
            <div class="d-flex align-items-center gap-2 mb-3">
              <i class="fas fa-star text-warning fs-5"></i>
              <h5 class="fw-bold mb-0" style="font-size: 1.1rem;">Leave a Review</h5>
            </div>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
              
              <!-- Custom Star Rating Input -->
              <div class="mb-3">
                <label class="form-label fw-semibold mb-2" style="font-size: 0.9rem;">Rating</label>
                <div class="star-rating-input">
                  <input type="radio" id="star5" name="review[rating]" value="5" required>
                  <label for="star5" class="star" title="Excellent">★</label>
                  
                  <input type="radio" id="star4" name="review[rating]" value="4">
                  <label for="star4" class="star" title="Very Good">★</label>
                  
                  <input type="radio" id="star3" name="review[rating]" value="3">
                  <label for="star3" class="star" title="Good">★</label>
                  
                  <input type="radio" id="star2" name="review[rating]" value="2">
                  <label for="star2" class="star" title="Fair">★</label>
                  
                  <input type="radio" id="star1" name="review[rating]" value="1">
                  <label for="star1" class="star" title="Poor">★</label>
                </div>
                <div class="rating-feedback"></div>
                <div class="invalid-feedback">Please select a rating</div>
              </div>
              
              <div class="mb-3">
                <label for="comment" class="form-label fw-semibold mb-2" style="font-size: 0.9rem;">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control review-textarea"
                  placeholder="Share your experience with this listing..." required></textarea>
                <div class="invalid-feedback">Please submit some comments for review</div>
              </div>
              <button class="btn btn-outline-dark px-4 py-2 fw-semibold rounded-pill">Submit</button>
            </form>
          </div>
        <% } else { %>
          <div class="mb-4 pb-3 border-bottom">
            <div class="d-flex align-items-center gap-2 mb-3">
              <i class="fas fa-star text-warning fs-5"></i>
              <h5 class="fw-bold mb-0" style="font-size: 1.1rem;">Leave a Review</h5>
            </div>
            <div class="login-cta-box">
              <p class="mb-3 text-muted">Log in to leave a review.</p>
              <a href="/login" class="btn btn-outline-primary px-4 py-2 rounded-pill fw-semibold">Go to Login</a>
            </div>
          </div>
        <% } %>

        <!-- Empty State (if no reviews) -->
        <% if(listing.reviews.length === 0) { %>
          <div class="text-center py-4 empty-reviews border-bottom mb-4 pb-3">
            <i class="fas fa-comments text-muted fs-1 mb-3"></i>
            <p class="text-muted mb-0">No reviews yet. Be the first to review!</p>
          </div>
        <% } %>

      </div>
    </div>

  </div>

<script>
  // Booking price calculation
  const pricePerNight = <%= listing.price %>;
  const serviceFee = 2500;
  const nightsInput = document.getElementById('nightsInput');
  const nightsDisplay = document.getElementById('nightsDisplay');
  const nightsPriceDisplay = document.getElementById('nightsPriceDisplay');
  const totalPriceDisplay = document.getElementById('totalPriceDisplay');

  function updatePrice() {
    const nights = parseInt(nightsInput.value) || 5;
    const nightsPrice = pricePerNight * nights;
    const total = nightsPrice + serviceFee;

    nightsDisplay.textContent = nights;
    nightsPriceDisplay.textContent = '₹' + nightsPrice.toLocaleString('en-IN');
    totalPriceDisplay.textContent = '₹' + total.toLocaleString('en-IN');
  }

  nightsInput.addEventListener('change', updatePrice);
  nightsInput.addEventListener('input', updatePrice);

  // Star rating feedback
  document.addEventListener('DOMContentLoaded', function() {
    const ratingInputs = document.querySelectorAll('.star-rating-input input[type="radio"]');
    const ratingFeedback = document.querySelector('.rating-feedback');
    
    if (ratingInputs.length > 0 && ratingFeedback) {
      const labels = {
        '1': 'Poor',
        '2': 'Fair',
        '3': 'Good',
        '4': 'Very Good',
        '5': 'Excellent'
      };
      
      ratingInputs.forEach(input => {
        input.addEventListener('change', function() {
          ratingFeedback.textContent = labels[this.value];
        });
      });
    }
  });
</script>
