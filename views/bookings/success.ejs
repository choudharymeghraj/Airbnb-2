<% layout('/layouts/boilerplate') %>

<div class="container py-5">

  <div class="text-center mb-4">
    <div class="mb-3">
      <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
    </div>

    <h2 class="fw-bold">Payment Successful ðŸŽ‰</h2>
    <p class="text-muted">
