<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3 class="fw-bold mb-4">My Bookings</h3>
            <% const validBookings=bookings.filter(booking=> booking.listing); %>
                <% if(validBookings.length===0) { %>
                    <div class="alert alert-secondary" role="alert">
                        You have no bookings yet. <a href="/listings" class="alert-link">Explore listings</a> to book
                        your
                        next trip!
                    </div>
                    <% } else { %>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% for(let booking of validBookings) { %>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-0">
                                        <img src="<%= booking.listing.image.url %>" class="card-img-top rounded-top"
                                            alt="<%= booking.listing.title %>"
                                            style="height: 200px; object-fit: cover;">
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title fw-bold">
                                                <%= booking.listing.title %>
                                            </h5>
                                            <p class="card-text text-muted small">
                                                <%= booking.listing.location %>, <%= booking.listing.country %>
                                            </p>
                                            <hr>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="text-muted">Check-in</span>
                                                <span class="fw-semibold">
                                                    <%= booking.checkIn.toLocaleDateString("en-IN") %>
                                                </span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="text-muted">Check-out</span>
                                                <span class="fw-semibold">
                                                    <%= booking.checkOut.toLocaleDateString("en-IN") %>
                                                </span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="text-muted">Total Price</span>
                                                <span class="fw-bold text-danger">&#8377; <%=
                                                        booking.totalPrice.toLocaleString("en-IN") %></span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="badge bg-success">
                                                    <%= booking.status %>
                                                </span>
                                            </div>

                                            <div class="mt-auto d-flex justify-content-between">
                                                <a href="/bookings/<%= booking._id %>/edit"
                                                    class="btn btn-sm btn-outline-primary">Edit</a>
                                                <form method="POST" action="/bookings/<%= booking._id %>?_method=DELETE"
                                                    class="d-inline">
                                                    <button class="btn btn-sm btn-outline-danger">Cancel</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <% } %>
        </div>
    </div>